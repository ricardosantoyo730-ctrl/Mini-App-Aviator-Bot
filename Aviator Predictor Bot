<body>
    <h1>Bienvenido al Panel de Señales</h1>
    <p>Presiona el botón para recibir la última actualización.</p>
    <button class="btn" onclick="sendSignal()">Generar Señal</button>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();

        function sendSignal() {
            tg.showConfirm("¿Quieres generar una nueva señal ahora?", (ok) => {
                if (ok) tg.showAlert("Generando señal... ¡Espera un momento!");
            });
        }
    </script>
